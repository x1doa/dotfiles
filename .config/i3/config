## Variables
set $mod Mod4
set $term i3-sensible-terminal

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

## Autostart

# Start iBus daemon
exec --no-startup-id ibus-daemon -rdx

# Merge Xresources and others
exec --no-startup-id xrdb -merge ~/.Xresources
exec --no-startup-id xss-lock --transfer-sleep-lock ~/.local/bin/lock

# PolicyKit and others
exec --no-startup-id lxpolkit
exec --no-startup-id udiskie

# Load other config files
include config.d/keybinds.conf
include config.d/rules.conf

include themes/stylish.conf
